<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Wise.Module.ViewModel"
                    xmlns:view="clr-namespace:Wise.Module.View">

    <DataTemplate DataType="{x:Type viewModels:ContentViewModel}">
        <view:ContentView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:OtherContentViewModel}">
        <view:OtherContentView />
    </DataTemplate>
</ResourceDictionary>